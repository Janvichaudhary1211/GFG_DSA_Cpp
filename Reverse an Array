/*
Problem Statement:
You are given an array of integers arr[]. Your task is to reverse the given array.

Note: Modify the array in place.
*/
class Solution {
  public:
    void reverseArray(vector<int> &arr) {
        int i=0;
        int j=arr.size()-1;
        while(i<=j){
            swap(arr[i],arr[j]);
            i++;
            j--;
        }
    }
};
